defaults
logfile ~/.msmtp.log
auth on
tls on
tls_starttls off
timeout 30
domain %fqdn%

dsn_notify failure,delay
dsn_return off

account digriz
host %digriz.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %digriz.email%
user %digriz.username%
password %digriz.password%
dsn_notify off

account coremem
host %coremem.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %coremem.email%
user %coremem.username%
password %coremem.password%
dsn_notify off

account networkradius
host %networkradius.smtp%
#tls_fingerprint D4:E0:6F:E0:ED:7D:18:EF:18:F4:2D:1B:31:36:79:4D:9B:F7:2E:D5
tls_trust_file /usr/src/mutthub/networkradius.crt
from %networkradius.email%
user %networkradius.email%
password %networkradius.password%
dsn_notify off

account solex
host %solex.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %solex.email%
user %solex.username%
password %solex.password%
dsn_notify off

account adloox
host %adloox.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %adloox.email%
user %adloox.username%
password %adloox.password%
dsn_notify off

account default : digriz
