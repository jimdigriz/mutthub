defaults
logfile ~/.msmtp.log
auth on
tls on
dsn_notify failure,delay
timeout 30
domain %fqdn%

account digriz
host %digriz.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %digriz.email%
user %digriz.username%
password %digriz.password%
tls_starttls off
dsn_notify off

account coremem
host %coremem.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %coremem.email%
user %coremem.username%
password %coremem.password%
tls_starttls off
dsn_notify off

account networkradius
host %networkradius.smtp%
port 587
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %networkradius.email%
user %networkradius.email%
password %networkradius.password%

account a9g
host %a9g.smtp%
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from %a9g.email%
user %a9g.username%
password %a9g.password%
tls_starttls off
dsn_notify off

account default : digriz
