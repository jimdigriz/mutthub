#!/bin/sh

set -eu

case $(uname) in
Linux)	ERE=r;;
*)	ERE=E;;
esac

for FILE; do :; done

/bin/sed -n -i -$ERE -e '
/^>( ?>)* *-- ?$/		b qsig
/^>( ?>)*.* @ Telemetry$/	b qsig

/^> ?> ?> ?>/			d
/^> ?> ?> ?On .* wrote:$/	d

: ok
x
2,$ p
$ { x; p }
b

: qsig
x
/^>( ?>)*$/! p
x
: qsigl
x
n
/^>/ b qsigl
x
' "$FILE"

exec "$@"
