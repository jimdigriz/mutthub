text/html; w3m -o confirm_qq=FALSE -o auto_image=TRUE -o display_image=1 -o inline_img_protocol=2 -T text/html -I %{charset} %s; nametemplate=%s.html
#text/html; w3m -dump -T text/html -I %{charset} %s; nametemplate=%s.html; copiousoutput
text/html; pandoc -f html -t plain %s; copiousoutput

#text/plain; cat %s; copiousoutput; edit=vim -c 'setlocal fo=awnqptc comments=nb:> filetype=mail wm=0 tw=72 nonumber digraph list nojs nosmartindent spell spelllang=en_gb' %s
#text/markdown; cat %s; copiousoutput; edit=vim -c 'setlocal fo=awnqptc comments=nb:> filetype=mail wm=0 tw=72 nonumber digraph list nojs nosmartindent spell spelllang=en_gb' %s

text/uri-list; cat %s; copiousoutput

## images
# wayland
image/gif; swayimg %s; test=test ${XDG_SESSION_TYPE:-no} = wayland
image/jpeg; swayimg %s; test=test ${XDG_SESSION_TYPE:-no} = wayland
image/jpg; swayimg %s; test=test ${XDG_SESSION_TYPE:-no} = wayland
image/png; swayimg %s; test=test ${XDG_SESSION_TYPE:-no} = wayland
# x11
image/gif; qiv -tfi %s; test=test ${XDG_SESSION_TYPE:-no} = x11
image/jpeg; qiv -tfi %s; test=test ${XDG_SESSION_TYPE:-no} = x11
image/jpg; qiv -tfi %s; test=test ${XDG_SESSION_TYPE:-no} = x11
image/png; qiv -tfi %s; test=test ${XDG_SESSION_TYPE:-no} = x11
# terminal
image/gif; img2sixel -I -h $(($(tput lines)*16)) %s; needsterminal
image/jpeg; img2sixel -I -h $(($(tput lines)*16)) %s; needsterminal
image/jpg; img2sixel -I -h $(($(tput lines)*16)) %s; needsterminal
image/png; img2sixel -I -h $(($(tput lines)*16)) %s; needsterminal
