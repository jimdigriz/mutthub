text/html; /usr/bin/sensible-browser '%s'; description=HTML Text; nametemplate=%s.html
text/html; /usr/bin/elinks -force-html '%s'; needsterminal; description=HTML Text; nametemplate=%s.html
text/html; /usr/bin/html2text -style pretty '%s'; copiousoutput; description=HTML Text

image/gif; qiv -tfi '%s'; description="GIF Image"; test=test "$DISPLAY"; nametemplate=%s.gif
image/jpeg; qiv -tfi '%s'; description="JPEG Image"; test=test "$DISPLAY"; nametemplate=%s.jpeg
image/png; qiv -tfi '%s'; description="PNG Image"; test=test "$DISPLAY"; nametemplate=%s.png
# WTF? Apple Mail?!
image/jpg; qiv -tfi '%s'; description="JPEG Image"; test=test "$DISPLAY"; nametemplate=%s.jpeg

application/x-msword; soffice -no-oosplash -writer '%s'; edit=soffice -no-oosplash -writer '%s'; test=test -n "$DISPLAY"; description="Office Open XML Document"; nametemplate=%s.docx
application/x-msexcel; soffice -no-oosplash -calc '%s'; edit=soffice -no-oosplash -calc '%s'; test=test -n "$DISPLAY"; description="Microsoft Excel Document"; nametemplate=%s.xls
application/x-msexcel; xlsview '%s'; description="MS Excel sheet"; test=test "$DISPLAY"
application/x-msexcel; xls2csv '%s'; copiousoutput; description="MS Excel sheet";
