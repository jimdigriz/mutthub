# :hook folder-hook "$HOME/Mail/coremem" source "$HOME/.mutt/accounts/coremem"
# :hook mailboxes "$HOME/Mail/coremem/Inbox"

set folder="$HOME/Mail/coremem"
set spoolfile=+Inbox
set record=!
set postponed=!Drafts

set from=%coremem.email%

set use_envelope_from=yes
set envelope_from_address=%coremem.email%

alias me %coremem.email% (%name%)
alternates '^alex(\\+[a-zA-Z0-9-]+)?@coremem\.com$'

my_hdr Organization: coreMem Limited

macro index,pager $ "<sync-mailbox><shell-escape>/bin/sh -eu ~/.mutt/utils/sync %coremem.email%<enter>" "Sync Mailbox"
