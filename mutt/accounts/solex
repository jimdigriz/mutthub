# :hook folder-hook "$HOME/Mail/solex" source "$HOME/.mutt/accounts/solex"
# :hook mailboxes "$HOME/Mail/solex/Inbox"

set folder="$HOME/Mail/solex"
set spoolfile="+Inbox"
set record="+Sent Mail"
set postponed="+Drafts"

set from=%solex.email%

set hostname="`hostname -s`.solex.io"
set hidden_host=yes

set use_envelope_from=yes
set envelope_from_address=%solex.email%

unset signature

alias me %solex.email% (%name%)
alternates 'aclouter(\\+[a-zA-Z0-9-]+)?@solex\.io$'

my_hdr Organization: Adloox

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync solex<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
