# :hook folder-hook "$HOME/Mail/adloox.aclouter" source "$HOME/.mutt/accounts/adloox"
# :hook mailboxes "$HOME/Mail/adloox.aclouter/INBOX"

set folder="$HOME/Mail/adloox.aclouter"
set spoolfile=+INBOX
set record=!
set postponed=!.Drafts

set from=%adloox.email%

set use_envelope_from=yes
set envelope_from_address=%adloox.email%

unset signature

alias me %adloox.email% (%name%)
alternates 'aclouter(\\+[a-zA-Z0-9-]+)?@adloox\.com$'

my_hdr Organization: Adloox

macro index,pager S "<save-message>!.Spam<enter>" "File as Spam"
