# :hook folder-hook "$HOME/Mail/adloox" source "$HOME/.mutt/accounts/adloox"
# :hook mailboxes "$HOME/Mail/adloox/Inbox"

set folder="$HOME/Mail/adloox"
set spoolfile="+Inbox"
unset record
set postponed="+Drafts"

set from=%adloox.email%

set hostname="`hostname -s`.adloox.com"
set hidden_host=yes

set use_envelope_from=yes
set envelope_from_address=%adloox.email%

unset signature

alias me %adloox.email% (%name%)
alternates "aclouter(\\+.+)?@adloox\.com$"

my_hdr Organization: Adloox

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync adloox<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
