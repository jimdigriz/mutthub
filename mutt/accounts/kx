# :hook folder-hook "$HOME/Mail/kx" source "$HOME/.mutt/accounts/kx"
# :hook mailboxes "$HOME/Mail/kx/Inbox"

set folder="$HOME/Mail/kx"
set spoolfile=+Inbox
unset record
set postponed=+Drafts

set from=%kx.email%

set hostname="`hostname -s`.kx.com"
set hidden_host=yes

set use_envelope_from=yes
set envelope_from_address=%kx.email%

unset signature

alias me %kx.email% (%name%)
alternates "aclouter(\\+.+)?@kx\.com$"

my_hdr Organization: Adloox

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync kx<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
