# :hook folder-hook "$HOME/Mail/digriz" source "$HOME/.mutt/accounts/digriz"
# :hook mailboxes "$HOME/Mail/digriz/Inbox"

set folder="$HOME/Mail/digriz"
set spoolfile=+Inbox
set record=!
set postponed=!Drafts

set from=%digriz.email%

set use_envelope_from=yes
set envelope_from_address=%digriz.email%

alias me %digriz.email% (%name%)
alternates "@digriz\.org\.uk$" "@alex\.digriz\.org\.uk$"

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync digriz<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
