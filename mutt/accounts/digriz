# :hook folder-hook "$HOME/Mail/digriz.alex" source "$HOME/.mutt/accounts/digriz"
# :hook mailboxes "$HOME/Mail/digriz.alex/INBOX"

set folder="$HOME/Mail/digriz.alex"
set spoolfile=+INBOX
set record=!
set postponed=!.Drafts

set from=%digriz.email%

set use_envelope_from=yes
set envelope_from_address=%digriz.email%

alias me %digriz.email% (%name%)
alternates '^alex(\\+[a-zA-Z0-9-]+)?@digriz\.org\.uk$'

my_hdr Organization: WormNET
my_hdr Jabber-ID: %digriz.email%

macro index,pager S "<save-message>!.Spam<enter>" "File as Spam"
