set folder="$HOME/Mail/main.me/INBOX"
set spoolfile=+
set record=!
set postponed==Drafts

set from=%main.email%

alias me %main.email% (%name%)
alternates (me|me2)@example\.com

set signature="echo '\n\n\
%name%\n\
Head of Awesomeness' |"

macro index,pager S "<save-message>=../Junk<quote-char> E-Mail<enter>" "File as Spam"
