# :hook folder-hook "$HOME/Mail/EXAMPLE" source "$HOME/.mutt/accounts/EXAMPLE"
# :hook mailboxes "$HOME/Mail/EXAMPLE/Inbox"

set folder="$HOME/Mail/EXAMPLE"
set spoolfile=+Inbox
set record=!
set postponed=!Drafts

set from=%EXAMPLE.email%

set use_envelope_from=yes
set envelope_from_address=%EXAMPLE.email%

alias me %EXAMPLE.email% (%name%)
alternates '^alex(\\+[a-zA-Z0-9-]+)?@example\.com$'

my_hdr Organization: EXAMPLE Ltd

macro index,pager $ "<sync-mailbox><shell-escape>/bin/sh -eu ~/.mutt/utils/sync %EXAMPLE.email%<enter>" "Sync Mailbox"
