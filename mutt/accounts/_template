# :hook folder-hook "$HOME/Mail/EXAMPLE" source "$HOME/.mutt/accounts/EXAMPLE"
# :hook mailboxes "$HOME/Mail/EXAMPLE/Inbox"

set folder="$HOME/Mail/EXAMPLE"
set spoolfile=+Inbox
set record=!
set postponed=+Drafts

set from=%EXAMPLE.email%

set use_envelope_from=yes
set envelope_from_address=%EXAMPLE.email%

alias me %EXAMPLE.email% (%name%)
alternates "^alex(\\+.+)?@example\.com$"

my_hdr Organization: EXAMPLE Ltd

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync EXAMPLE<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
