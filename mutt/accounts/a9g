# :hook folder-hook "$HOME/Mail/a9g" source "$HOME/.mutt/accounts/a9g"
# :hook mailboxes "$HOME/Mail/a9g/Inbox"

set folder="$HOME/Mail/a9g"
set spoolfile=+Inbox
set record=!
set postponed=!Drafts

set from=%a9g.email%

set use_envelope_from=yes
set envelope_from_address=%a9g.email%

alias me %a9g.email% (%name%)
alternates '^alex(\\+[a-zA-Z0-9-]+)?@a9g\.com$'

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync a9g<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
