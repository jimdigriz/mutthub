# :hook folder-hook "$HOME/Mail/fastmail" source "$HOME/.mutt/accounts/fastmail"
# :hook mailboxes "$HOME/Mail/fastmail/Inbox"

set folder="$HOME/Mail/fastmail"
set spoolfile=+Inbox
set record=!
set postponed=!Drafts

set from=%fastmail.email%

alias me %fastmail.email% (%name%)
alternates '^jimdigriz(\\+[a-zA-Z0-9-]+)?@imapmail\.org$'

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>/bin/sh -eu ~/.mutt/utils/sync %fastmail.email%<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"
