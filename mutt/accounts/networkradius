# :hook folder-hook "$HOME/Mail/networkradius" source "$HOME/.mutt/accounts/networkradius"
# :hook mailboxes "$HOME/Mail/networkradius/Inbox"

set folder="$HOME/Mail/networkradius"
set spoolfile=+Inbox
set record=!
set postponed=+Drafts

set from=%networkradius.email%

set use_envelope_from=yes
set envelope_from_address=%networkradius.email%

unset signature

alias me %networkradius.email% (%name%)
alternates "aclouter(\\+.+)?@networkradius\.com$"

my_hdr Organization: Network RADIUS

macro index,pager $ "<sync-mailbox><enter-command>set my_wait_key=\$wait_key<enter><enter-command>set wait_key=no<enter><shell-escape>mbsync networkradius<enter><enter-command>set wait_key=\$my_wait_key<enter>" "Sync Mailbox"

set pgp_default_key="0x976DFACFBAE2D3F16AE79C0FDE1F3ADBED9EFF6B"
