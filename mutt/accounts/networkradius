# :hook folder-hook "$HOME/Mail/networkradius" source "$HOME/.mutt/accounts/networkradius"
# :hook mailboxes "$HOME/Mail/networkradius/Inbox"

set folder="$HOME/Mail/networkradius"
set spoolfile=+Inbox
set record=!
set postponed=!Drafts

set from=%networkradius.email%

set use_envelope_from=yes
set envelope_from_address=%networkradius.email%

unset signature

alias me %networkradius.email% (%name%)
alternates 'aclouter(\\+[a-zA-Z0-9-]+)?@networkradius\.com$'

my_hdr Organization: Network RADIUS

macro index,pager $ "<sync-mailbox><shell-escape>/bin/sh -eu ~/.mutt/utils/sync %networkradius.email%<enter>" "Sync Mailbox"
