# :hook[stevemcqueen] folder-hook "$HOME/Mail/telemetry.aclouter" source "$HOME/.mutt/accounts/telemetry"
# :hook[stevemcqueen] mailboxes "$HOME/Mail/telemetry.aclouter/INBOX"

set folder="$HOME/Mail/telemetry.aclouter/INBOX"
set spoolfile=+
set record=!
set postponed=!/Drafts

set from=%telemetry.email%

alias me %telemetry.email% (%name%)
alternates (aclouter|ac33)@telemetry\.com

my_hdr Organization: Telemetry Labs

# bypass the O365 sig-o-matic
my_hdr X-Telemetry-Sig: cooked

unset signature
unset sig_dashes
set signature="echo '\n\n\
%name% @ Telemetry\n\
Head of Infrastructure\n\
Ext 121\n\
New York +1 212 380 6666\n\
London +44 (0)20 7148 7777\n\
http://www.telemetry.com\n\
The Digital Media Forensics Company' |"

macro index,pager S "<save-message>!/Junk E-mail<enter>" "File as Spam"
